{% extends '::layout/layout.html.twig' %}

{% block content %}
    <section class="container">
        <div class="logo">
            <img src="{{ asset('media/img/logo.png') }}" />
        </div>
        <div class="login">
            <h1>Forgot your password</h1>
            <form method="post" action="index.html">
                <p>We will send instructions for resetting your password on your email.</p>
                <p><input type="text" name="login" value="" placeholder="Email"></p>
                <p class="submit"><input type="submit" name="commit" value="Sign in"></p>
            </form>
        </div>
    </section>
{% endblock %}